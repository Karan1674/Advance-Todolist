<section class="">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-12">
      <h2 class="text-3xl sm:text-4xl font-extrabold text-gray-800 tracking-tight">
        Designed for Business Teams Like Yours
      </h2>
      <p class="text-lg text-gray-600 mt-4">
        Choose a plan that fits your needs and scale effortlessly.
      </p>
    </div>
    <div class="space-y-8 lg:grid lg:grid-cols-3 sm:gap-6 xl:gap-10 lg:space-y-0">
      <% pricingPlans.forEach(plan => { %>
        <div class="flex flex-col p-6 mx-auto max-w-lg text-center text-gray-900 bg-white rounded-xl border <% if(user && user.packageDetails === plan.id) { %>active-plan<% } else { %>border-gray-200<% } %> shadow-sm card-hover fade-in">
          <h3 class="mb-4 text-2xl font-semibold <%= user && user.packageDetails === plan.id ? 'text-gray-900' : 'text-gray-800' %>">
            <%= plan.name %>
          </h3>
          <p class="text-gray-600 sm:text-lg">
            <%= plan.description %>
          </p>
          <div class="flex justify-center items-baseline my-8">
            <span class="mr-2 text-5xl font-extrabold"><%= plan.priceLabel.split('/')[0] %></span>
            <% if(plan.priceLabel.includes('/')) { %>
              <span class="text-gray-600">/month</span>
            <% } %>
          </div>
          <ul role="list" class="mb-8 space-y-4 text-left">
            <% plan.features.forEach(feature => { %>
              <li class="flex items-center space-x-3">
                <svg class="flex-shrink-0 w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span><%= feature %></span>
              </li>
            <% }) %>
          </ul>
          <a
            href="<%= plan.upgradeUrl(user) %>"
            class="text-white font-medium rounded-lg text-sm px-5 py-2.5 text-center focus:ring-4 focus:ring-blue-200 btn-hover <% if(plan.buttonDisabled(user)) { %>bg-gray-400 cursor-not-allowed<% } else { %>bg-blue-600<% } %>"
            <% if(plan.buttonDisabled(user)) { %>disabled aria-disabled="true"<% } %>
          >
            <%= plan.buttonText(user) %>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</section>
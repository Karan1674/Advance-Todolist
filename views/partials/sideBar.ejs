<div
  class="w-64 bg-white py-12 border-r border-gray-200 p-6 flex flex-col gap-6 lg:flex hidden"
  data-aos="fade-right"
  data-aos-duration="800"
>
  <a
    class="flex gap-3 items-center text-gray-800 hover:text-blue-600 transition-colors"
    href="/task"
  >
    <i class="fa-solid fa-list-check text-blue-600 text-xl"></i>
    <span class="font-semibold text-lg">Tasks</span>
  </a>
  <a
    class="flex gap-3 items-center text-gray-800 hover:text-blue-600 transition-colors"
    href="/addtask"
  >
    <i class="fa-solid fa-plus text-blue-600 text-xl"></i>
    <span class="font-semibold text-lg">Add Task</span>
  </a>
  <a
    class="flex gap-3 items-center text-gray-800 hover:text-blue-600 transition-colors"
    href="/medialibrary"
  >
    <i class="fa-solid fa-photo-film text-blue-600 text-xl"></i>
    <span class="font-semibold text-lg">Media Library</span>
  </a>
  <% if (isAdmin) { %>
  <a
    class="flex gap-3 items-center text-gray-800 hover:text-blue-600 transition-colors"
    href="/assigntask"
  >
    <i class="fa-solid fa-tasks text-blue-600 text-xl"></i>
    <span class="font-semibold text-lg">Assign Tasks</span>
  </a>
  <a
    class="flex gap-3 items-center text-gray-800 hover:text-blue-600 transition-colors"
    href="/assignedtask"
  >
    <i class="fa-solid fa-tasks text-blue-600 text-xl"></i>
    <span class="font-semibold text-lg">Assigned Tasks</span>
  </a>
  <% } else { %>
  <a
    class="flex gap-3 items-center text-gray-800 hover:text-blue-600 transition-colors"
    href="/Admintask"
  >
    <i class="fa-solid fa-tasks text-blue-600 text-xl"></i>
    <span class="font-semibold text-lg">Admin Tasks</span>
  </a>
  <% } %>
  <a
    class="flex gap-3 items-center text-gray-800 hover:text-blue-600 transition-colors"
    href="/profile"
  >
    <i class="fa-solid fa-user text-blue-600 text-xl"></i>
    <span class="font-semibold text-lg">Profile</span>
  </a>
  <a
    class="flex gap-3 items-center text-gray-800 hover:text-blue-600 transition-colors"
    href="/downloadTask"
  >
    <i class="fa-solid fa-download text-blue-600 text-xl"></i>
    <span class="font-semibold text-lg">Download</span>
  </a>
  <% if (user) { %>
  <a
    class="flex gap-3 items-center text-red-600 hover:text-red-700 transition-colors"
    href="/logout"
  >
    <i class="fa-solid fa-right-from-bracket text-red-600 text-xl"></i>
    <span class="font-semibold text-lg">Logout</span>
  </a>
  <% } %>
</div>

          <div class="flex justify-center gap-2 flex-col">
            <label for="assignedTo">Assign A Task</label>

            <input
              type="text"
              id="searchUser"
              placeholder="Search by name or email..."
              class="p-2 border border-gray-300 mt-2 rounded"
            />

            <select
              id="dropDown"
              name="assignedTo"
              class="hidden border border-gray-300 p-2 rounded"
              required
              size="5"
            >
              <% allUsers && allUsers.forEach((user) => { %>
              <option
                value="<%= user._id %>"
                data-name="<%= (user.firstName + ' ' + user.lastName).toLowerCase() %>"
                data-email="<%= user.email.toLowerCase() %>"
                class="border border-b-2 border-gray-200 p-2"
              >
                <%= user.firstName %> <%= user.lastName %> (<%= user.email %>)

          
              </option>

              <% }); %>
            </select>
          </div>

          <div class="flex justify-center gap-2">
            <div class="w-full flex justify-center gap-2 flex-col">
              <label class="text-medium font-medium tracking-wide"
                >DeadLine</label
              >
              <input
                type="date"
                name="deadline"
                class="w-full p-2 mb-4 border border-gray-300 rounded"
              />
            </div>

            <div class="w-full flex justify-center gap-2 flex-col">
              <label class="text-medium font-medium tracking-wide"
                >Follow-up</label
              >
              <input
                type="date"
                name="followup"
                class="w-full p-2 mb-4 border border-gray-300 rounded"
              />
            </div>
          </div>

          <div class="flex justify-center gap-2">
            <div class="w-full flex justify-center gap-2 flex-col">
              <label class="text-medium font-medium tracking-wide"
                >Status</label
              >
              <select
                name="status"
                class="w-full p-2 mb-4 border border-gray-300 rounded"
              >
                <option value="pending" selected>pending</option>
                <option value="completed">Completed</option>
                <option value="in-process">In-process</option>
              </select>
            </div>

            <div class="w-full flex justify-center gap-2 flex-col">
              <label class="text-medium font-medium tracking-wide"
                >Priority</label
              >
              <select
                name="priority"
                class="w-full p-2 mb-4 border border-gray-300 rounded"
              >
                <option value="Critical" selected>Critical</option>
                <option value="High">High</option>
                <option value="Low">Low</option>
                <option value="Medium">Medium</option>
              </select>
            </div>
          </div>

          <div class="w-full flex justify-center gap-2 flex-col">
            <div class="flex items-center justify-between">
              <label class="text-medium font-medium tracking-wide"
                >Want to add some sub targets</label
              >
              <button
                type="button"
                onclick="handleSubTargets()"
                class="bg-blue-600 px-3 p-1 rounded-md text-white"
              >
                <i class="fa-solid fa-plus"></i>
              </button>
            </div>
            <div class="grid grid-cols-1 w-full gap-2 mt-1 subtargetsBox">
              <div class="relative div-1">
                <!-- <input type="text" name="subtargets[]"
                                                class="w-full  p-2 mb-4 border border-gray-300 rounded">
                                            <i onclick="this.parentElement.remove()"
                                                class="fa-solid fa-minus text-red-600  text-xl absolute right-4 top-3"></i> -->
              </div>
            </div>
          </div>

          <div class="flex justify-between align-center mt-4">
            <button
              type="button"
              class="text-white font-bold bg-[#2f4858] p-2 px-8 rounded-md"
              onclick="window.location.href='/task'"
            >
              <i
                class="fa-solid fa-arrow-left text-center"
                style="color: #ffffff"
              ></i>
              Back
            </button>

            <button
              type="submit"
              class="text-white font-bold bg-green-500 p-2 px-8 rounded-md"
            >
              <i class="fa-solid fa-plus" style="color: #ffffff"></i>
              Add Task
            </button>
          </div>
        </form>
      </div>

  </div>
      <%- include('../partials/footer') %> <%- include('../partials/mediaPop') %>

  </body>
  <script>


    const handleSubTargets = () => {
      const subtargetsBox = document.querySelector(".subtargetsBox");
      const input = document.createElement("input");
      const div = document.createElement("div");
      input.className = "w-full p-2 mb-4 border border-gray-300 rounded";
      input.type = "text";
      input.name = "subtargets[]";
      div.append(input);

      div.classList = "relative";
      const i = document.createElement("i");
      i.className =
        "fa-solid fa-minus text-red-600  text-xl absolute right-4 top-3";
      i.addEventListener("click", () => handleDeleteSubTargets(div));
      div.append(i);
      subtargetsBox.append(div);
    };
    const handleDeleteSubTargets = (element) => {
      element.remove();
    };

    const searchUser = document.getElementById("searchUser");
    const dropDown = document.getElementById("dropDown");

 

    searchUser.addEventListener("click", function () {
      dropDown.classList.remove("hidden");
    });

    searchUser.addEventListener("input", function () {
  
      const filter = this.value.toLowerCase();
      const options = dropDown.querySelectorAll("option");
      options.forEach((option) => {
        const name = option.dataset.name.toLowerCase() || "";
        const email = option.dataset.email.toLowerCase() || "";

        if (name.includes(filter) || email.includes(filter)) {
          option.classList.remove("hidden");
        } else {
          option.classList.add("hidden");
        }
      });
    });

    dropDown.addEventListener("input", function () {
      const selectedOption = this.options[this.selectedIndex];
      if (selectedOption) {
        const name = selectedOption.dataset.name;
        const email = selectedOption.dataset.email;
        searchUser.value = `${name} (${email})`;
        dropDown.classList.add('hidden')
      }
    });
  </script>

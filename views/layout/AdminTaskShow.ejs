
<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header') %>
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<body class="min-h-screen bg-gray-100 flex flex-col font-sans">
  <%- include('../partials/navbar') %>

  <div class="flex min-h-screen flex-grow">
    <%- include('../partials/sidebar') %>
    <div class="flex-grow py-8 px-4 sm:px-6">
      <div class="max-w-6xl mx-auto" data-aos="fade-up" data-aos-duration="400">
        <div class="w-full  mb-6">
          <!-- <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 flex items-center gap-2">
            <i class="fa-solid fa-tasks text-teal-600"></i> Task List
          </h1> -->
          <input
            type="text"
            class="w-full p-3 text-sm text-gray-800 bg-white border border-gray-200 rounded-xl focus:ring-2 focus:ring-teal-500 focus:border-teal-500 transition"
            placeholder="Search tasks by title, user, or status..."
            id="searchInput"
            aria-label="Search tasks"
            data-aos="fade-up"
            data-aos-duration="400"
            data-aos-delay="100"
          />
        </div>
        <div class="bg-gradient-to-br from-white to-teal-50 shadow-lg rounded-xl overflow-hidden border border-gray-200">
          <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-700 min-w-[800px]">
              <thead class="text-xs uppercase bg-teal-50 text-gray-600 sticky top-0 z-10">
                <tr>
                  <th class="px-6 py-4 font-semibold">Sr No.</th>
                  <th class="px-6 py-4 font-semibold">Title</th>
                  <th class="px-6 py-4 font-semibold">Assigned To</th>
                  <th class="px-6 py-4 font-semibold">Email</th>
                  <th class="px-6 py-4 font-semibold">Status</th>
                  <th class="px-6 py-4 font-semibold">Deadline</th>
                  <th class="px-6 py-4 font-semibold">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white">
                <% if (todolist && todolist.length > 0) { %>
                  <% todolist.forEach((task, index) => { %>
                  <tr
                    class="border-b border-gray-200 hover:bg-teal-50/50 transition-colors"
                    data-aos="fade-up"
                    data-aos-duration="400"
                    data-aos-delay="<%= 200 + index * 100 %>"
                  >
                    <td class="px-6 py-4 font-medium text-gray-900"><%= index + 1 %></td>
                    <td class="px-6 py-4 line-clamp-1"><%= task.title || 'Untitled' %></td>
                    <td class="px-6 py-4">
                      <%= task.userId ? `${task.userId.firstName || ''} ${task.userId.lastName || ''}`.trim() || 'Unassigned' : 'Unassigned' %>
                    </td>
                    <td class="px-6 py-4">
                      <%= task.userId && task.userId.email ? task.userId.email : 'No email' %>
                    </td>
                    <td class="px-6 py-4">
                      <span
                        class="inline-block px-3 py-1.5 text-xs font-semibold rounded-full <%=
                          task.status === 'completed' ? 'bg-emerald-100 text-emerald-800' :
                          task.status === 'in-process' ? 'bg-amber-100 text-amber-800' :
                          'bg-red-100 text-red-800'
                        %>"
                      >
                        <%= task.status ? task.status.charAt(0).toUpperCase() + task.status.slice(1) : 'Unknown' %>
                      </span>
                    </td>
                    <td class="px-6 py-4">
                      <%= task.deadline ? new Date(task.deadline).toDateString() : 'No deadline' %>
                    </td>
                    <td class="px-6 py-4 flex gap-3">
                      <a
                        href="/taskDetail/<%= task._id %>"
                        class="text-teal-600 hover:text-teal-700 font-medium transition"
                        aria-label="View task <%= task.title || 'Untitled' %>"
                      >
                        View
                      </a>
                      <a
                        href="/editAdminpage/<%= task._id %>"
                        class="text-blue-600 hover:text-blue-700 font-medium transition"
                        aria-label="Edit task <%= task.title || 'Untitled' %>"
                      >
                        Edit
                      </a>
                      <button
                        onclick="handleDelete('<%= task._id %>')"
                        class="text-red-600 hover:text-red-700 font-medium transition"
                        aria-label="Delete task <%= task.title || 'Untitled' %>"
                      >
                        Delete
                      </button>
                    </td>
                  </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td
                      colspan="7"
                      class="text-center px-6 py-6 text-gray-500"
                      data-aos="fade-up"
                      data-aos-duration="400"
                      data-aos-delay="200"
                    >
                      No tasks available
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <%- include('../partials/popup') %>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    // Initialize AOS
    document.addEventListener('DOMContentLoaded', () => {
      AOS.init({
        duration: 400,
        easing: 'ease-out',
        once: true,
        offset: 120,
      });
    });

    const handleDelete = (taskId) => {
      event.stopPropagation();
      const popup = document.querySelector("#popup");
      if (!popup) {
        alert('Popup not found. Please try again.');
        return;
      }

      popup.classList.remove("hidden");

      const nobtn = document.querySelector("#no");
      const yesbtn = document.querySelector("#yes");

      if (nobtn) {
        nobtn.addEventListener("click", () => {
          popup.classList.add("hidden");
        });
      }

      if (yesbtn) {
        yesbtn.addEventListener("click", async () => {
          popup.classList.add("hidden");
          try {
            const response = await fetch(`/deletetask/${taskId}`, {
              method: "POST",
            });
            if (response.ok) {
              window.location.reload();
            } else {
              alert("Failed to delete task");
            }
          } catch (error) {
            console.error("Error deleting task:", error);
            alert("Error occurred while deleting");
          }
        });
      }
    };

    const searchInput = document.getElementById("searchInput");
    const tableRows = document.querySelectorAll("tbody tr");

    // Debounce search to improve performance
    let debounceTimeout;
    searchInput.addEventListener("input", () => {
      clearTimeout(debounceTimeout);
      debounceTimeout = setTimeout(() => {
        const query = searchInput.value.toLowerCase().trim();
        tableRows.forEach((row) => {
          const title = row.querySelector("td:nth-child(2)")?.textContent.toLowerCase() || '';
          const assignedTo = row.querySelector("td:nth-child(3)")?.textContent.toLowerCase() || '';
          const email = row.querySelector("td:nth-child(4)")?.textContent.toLowerCase() || '';
          const status = row.querySelector("td:nth-child(5)")?.textContent.toLowerCase() || '';
          if (title.includes(query) || assignedTo.includes(query) || email.includes(query) || status.includes(query)) {
            row.style.display = "";
          } else {
            row.style.display = "none";
          }
        });
        AOS.refreshHard();
      }, 300);
    });
  </script>
</body>
</html>
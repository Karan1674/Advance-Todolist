<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>

  <body class="min-h-screen bg-gray-100 flex flex-col">
    <%- include('../partials/navbar') %>

    <div class="flex flex-grow">
      <%- include('../partials/sidebar') %>
      <div class="mx-auto flex-grow p-6 max-w-5xl w-full">
        <form
          action="/addtask"
          method="post"
          enctype="multipart/form-data"
          class="flex justify-center flex-col gap-3 bg-white p-12 rounded shadow-md"
        >
          <h2 class="text-2xl font-bold mb-6 text-center">Add a New Task</h2>

          <div class="flex justify-center gap-4">
            <div class="flex w-full justify-center gap-2 flex-col">
              <label class="text-medium font-medium tracking-wide">Title</label>
              <input
                type="text"
                name="title"
                required
                class="w-full p-2 mb-4 border border-gray-300 rounded"
              />
            </div>
            <div class="flex w-full justify-center gap-2 flex-col">
              <label class="text-medium font-medium tracking-wide">Image</label>
              <input
                type="file"
                name="taskImage"
                accept="image/*"
                class="w-full p-2 mb-4 border border-gray-300 rounded"
              />
            </div>
          </div>

          <div class="flex justify-center gap-2 mb-2 flex-col">
            <label class="text-medium font-medium tracking-wide"
              >Discription</label
            >
            <!-- <textarea
              name="discription"
              cols="5"
              rows="5"
              class="w-full p-2 border border-gray-300 rounded"
            ></textarea> -->

            <textarea
              id="editor"
              class="w-full p-2 border border-gray-300 rounded"
              name="discription"
            ></textarea>
          </div>

          <div class="flex justify-center gap-2">
            <div class="w-full flex justify-center gap-2 flex-col">
              <label class="text-medium font-medium tracking-wide"
                >DeadLine</label
              >
              <input
                type="date"
                name="deadline"
                class="w-full p-2 mb-4 border border-gray-300 rounded"
              />
            </div>

            <div class="w-full flex justify-center gap-2 flex-col">
              <label class="text-medium font-medium tracking-wide"
                >Follow-up</label
              >
              <input
                type="date"
                name="followup"
                class="w-full p-2 mb-4 border border-gray-300 rounded"
              />
            </div>
          </div>

          <div class="flex justify-center gap-2">
            <div class="w-full flex justify-center gap-2 flex-col">
              <label class="text-medium font-medium tracking-wide"
                >Status</label
              >
              <select
                name="status"
                class="w-full p-2 mb-4 border border-gray-300 rounded"
              >
                <option value="pending" selected>pending</option>
                <option value="completed">Completed</option>
                <option value="in-process">In-process</option>
              </select>
            </div>

            <div class="w-full flex justify-center gap-2 flex-col">
              <label class="text-medium font-medium tracking-wide"
                >Priority</label
              >
              <select
                name="priority"
                class="w-full p-2 mb-4 border border-gray-300 rounded"
              >
                <option value="Critical" selected>Critical</option>
                <option value="High">High</option>
                <option value="Low">Low</option>
                <option value="Medium">Medium</option>
              </select>
            </div>
          </div>

          <div class="w-full flex justify-center gap-2 flex-col">
            <div class="flex items-center justify-between">
              <label class="text-medium font-medium tracking-wide"
                >Want to add some sub targets</label
              >
              <button
                type="button"
                onclick="handleSubTargets()"
                class="bg-blue-600 px-3 p-1 rounded-md text-white"
              >
                <i class="fa-solid fa-plus"></i>
              </button>
            </div>
            <div class="grid grid-cols-1 w-full gap-2 mt-1 subtargetsBox">
              <div class="relative div-1">
                <!-- <input type="text" name="subtargets[]"
                                                class="w-full  p-2 mb-4 border border-gray-300 rounded">
                                            <i onclick="this.parentElement.remove()"
                                                class="fa-solid fa-minus text-red-600  text-xl absolute right-4 top-3"></i> -->
              </div>
            </div>
          </div>

          <div class="flex justify-between align-center mt-4">
            <button
              type="button"
              class="text-white font-bold bg-[#2f4858] p-2 px-8 rounded-md"
              onclick="window.location.href='/task'"
            >
              <i
                class="fa-solid fa-arrow-left text-center"
                style="color: #ffffff"
              ></i>
              Back
            </button>

            <button
              type="submit"
              class="text-white font-bold bg-green-500 p-2 px-8 rounded-md"
            >
              <i class="fa-solid fa-plus" style="color: #ffffff"></i>
              Add Task
            </button>
          </div>
        </form>
      </div>
    </div>

    <%- include('../partials/footer') %> <%- include('../partials/mediaPop') %>
  </body>
  <script>


    const handleSubTargets = () => {
      const subtargetsBox = document.querySelector(".subtargetsBox");
      const input = document.createElement("input");
      const div = document.createElement("div");
      input.className = "w-full p-2 mb-4 border border-gray-300 rounded";
      input.type = "text";
      input.name = "subtargets[]";
      div.append(input);

      div.classList = "relative";
      const i = document.createElement("i");
      i.className =
        "fa-solid fa-minus text-red-600  text-xl absolute right-4 top-3";
      i.addEventListener("click", () => handleDeleteSubTargets(div));
      div.append(i);
      subtargetsBox.append(div);
    };
    const handleDeleteSubTargets = (element) => {
      element.remove();
    };


    
  

  </script>
</html>

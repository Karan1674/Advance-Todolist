<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header')%>
  <body class="min-h-screen bg-gray-100 flex flex-col">
    <%- include('../partials/navbar.ejs') %>

    <div class="flex min-h-screen ">
      <%- include('../partials/sidebar') %>

      <div
        class="max-w-3xl relative w-full  mx-auto mt-10 mb-8 bg-white p-8 rounded-lg shadow-md"
      >
        <div class="flex  items-center space-x-6">
          <div class="relative">
            <img
              class="h-32 w-32 rounded-full object-cover border-4 border-gray-100"
              src="../../uploads/<%= user.profilePic %>"
              alt="Profile Picture"
            />
            <div
              class="h-32 w-32 rounded-full absolute opacity-40 inset-0 bg-black"
            ></div>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-gray-900">
              <%= user.firstName %> <%= user.lastName %>
            </h1>

            <p class="text-gray-600 mt-3">
              <strong>Email:</strong> <%= user.email %>
            </p>
            <p class="absolute right-1 top-1">
              <% if (isAdmin) { %>
              <span
                class="mt-3 inline-block bg-green-100 text-green-800 text-xs font-semibold px-4 py-2 rounded-full"
              >
                Admin
              </span>
              <% } else { %>
              <span
                class="mt-3 inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-3 py-1 rounded-full"
              >
                User
              </span>
              <% } %>
            </p>
          </div>
        </div>

        <div class="my-8">
          <h2 class="text-xl font-semibold text-gray-800 mb-4">
            Task Overview
          </h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <div
              class="bg-blue-100 rounded-lg p-5 shadow-md flex items-center justify-between"
            >
              <div>
                <h3 class="text-lg font-medium text-blue-800">Tasks</h3>
                <p class="text-2xl font-bold text-blue-900 mt-1">
                  <%= todolist.length %>
                </p>
              </div>
              <i class="fa-solid fa-list-check text-blue-700 text-3xl"></i>
            </div>

            <div
              class="bg-yellow-100 rounded-lg p-5 shadow-md flex items-center justify-between"
            >
              <div>
                <h3 class="text-lg font-medium text-yellow-800">Assigned</h3>
                <% if(isAdmin) {%>
                <p class="text-2xl font-bold text-yellow-900 mt-1">
                  <%= adminAssignedtask %>
                </p>
                <% } else{%>
                <p class="text-2xl font-bold text-yellow-900 mt-1">
                  <%= todolist.filter(t => t.assignedBy === "admin").length %>
                  <%}%>
                </p>
              </div>

              <i class="fa-solid fa-tasks text-yellow-700 text-3xl"></i>
            </div>

            <div
              class="bg-green-100 rounded-lg p-5 shadow-md flex items-center justify-between"
            >
              <div>
                <h3 class="text-lg font-medium text-green-800">Completed</h3>
                <p class="text-2xl font-bold text-green-900 mt-1">
                  <%= todolist.filter(t => t.status === "completed").length %>
                </p>
              </div>
              <i class="fa-solid fa-check-circle text-green-700 text-3xl"></i>
            </div>

            <div
              class="bg-red-100 rounded-lg p-5 shadow-md flex items-center justify-between"
            >
              <div>
                <h3 class="text-lg font-medium text-red-800">Pending</h3>
                <p class="text-2xl font-bold text-red-900 mt-1">
                  <%= todolist.filter(t => t.status === "pending").length %>
                </p>
              </div>
              <i class="fa-solid fa-hourglass-half text-red-700 text-3xl"></i>
            </div>

            <div
              class="bg-indigo-100 rounded-lg p-5 shadow-md flex items-center justify-between"
            >
              <div>
                <h3 class="text-lg font-medium text-indigo-800">In Process</h3>
                <p class="text-2xl font-bold text-indigo-900 mt-1">
                  <%= todolist.filter(t => t.status === "in-process").length%>
                </p>
              </div>
              <i class="fa-solid fa-spinner text-indigo-700 text-3xl"></i>
            </div>
          </div>
        </div>

        <div class="mt-8 flex items-center justify-between gap-3">
          <a
            href="#"
            onclick="window.history.back(); return false;"
            class="bg-[#2f4858] text-white px-4 py-2 rounded hover:bg-[#1e3342] flex items-center gap-2"
          >
            <i class="fa-solid fa-arrow-left"></i> Back
          </a>
          <a
            href="/edit-profilePage"
            class="inline-block px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg"
          >
            Edit Profile
          </a>
        </div>
      </div>
    </div>

    <%- include('../partials/footer')%>
  </body>
</html>
